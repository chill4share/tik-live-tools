{
  "name": "tiktok-live-tool",
  "version": "1.0.0",
  "description": "TikTok Live Desktop Tool",
  "author": "Chill",
  "main": "src/main/index.js",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/chill4share/tik-live-tools.git"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"npx wait-on http://localhost:5173 && electron . --dev\"",
    "start": "electron .",
    "build:renderer": "vite build",
    "build:app": "npm run build:renderer && electron-builder --win --x64",
    "dist": "npm run build:app",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.1.7",
    "keytar": "^7.9.0",
    "node-fetch": "^2.7.0",
    "preact": "^10.27.2",
    "puppeteer-core": "^24.3.0",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "tiktok-live-connector": "^2.1.0"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@rollup/rollup-win32-x64-msvc": "^4.53.2",
    "concurrently": "^9.2.1",
    "electron": "^31.2.0",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.27.0",
    "vite": "^7.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "productName": "TikTokLiveTool",
    "appId": "com.chill4share.tiktoklivetool",
    "publish": [
      {
        "provider": "github",
        "owner": "chill4share",
        "repo": "tik-live-tools"
      }
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
